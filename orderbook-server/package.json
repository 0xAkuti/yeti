{
  "name": "yeti-orderbook-server",
  "version": "1.0.0",
  "description": "Order storage and discovery server for Yeti conditional orders",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:reset": "tsx src/database/migrate.ts --reset",
    "migrate:status": "tsx src/database/migrate.ts --status",
    "db:setup": "npm run migrate",
    "db:reset": "npm run migrate:reset && npm run migrate"
  },
  "keywords": [
    "orderbook",
    "1inch",
    "limit-orders",
    "yeti"
  ],
  "author": "Yeti Team",
  "license": "MIT",
  "dependencies": {
    "@1inch/limit-order-sdk": "^5.0.4-rc.0",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "tsx": "^4.19.5",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "inflight": "npm:@isaacs/inflight@^1.0.6",
    "glob": "^10.3.10"
  }
}
